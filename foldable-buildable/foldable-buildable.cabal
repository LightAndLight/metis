category:           Data
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Data.Buildable
    -- other-modules:
    -- other-extensions:
    build-depends:    
        base ^>=4.17.2.0,
        containers,
        hashable,
        unordered-containers,
        vector
    hs-source-dirs:   src
    default-language: Haskell2010

test-suite foldable-buildable-test
    import:           warnings
    default-language: Haskell2010
    -- other-modules:
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base ^>=4.17.2.0,
        foldable-buildable,
        hspec,
        vector
